<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<File name="LogForTests" fileName="logs/log4tests.log">
			<PatternLayout
				pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</appenders>

	<loggers>
		<root level="debug">
			<appender-ref ref="LogForTests" level="info" />
			<appender-ref ref="LogForTests" level="warn" />
			<appender-ref ref="LogForTests" level="error" />
			<appender-ref ref="LogForTests" level="fatal" />
		</root>
	</loggers>
</configuration>